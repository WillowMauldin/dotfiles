[user]
	email = willow@mauldin.me
	name = Willow Mauldin

[diff]
        tool = difftastic

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"

[pager]
        difftool = true

[pull]
	ff = only

[push]
	default = current
	autosetupremote = true

[branch]
	autosetupmerge = always
	autosetuprebase = always

[merge]
	conflictstyle = "zdiff3"

[rebase]
	autosquash = true

[core]
	editor = nvim

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
